@{
    ViewBag.Title = "Metal Transection";
}

<div class="container p-3" style="background-color: #f8d7da; border-radius: 10px;">
    <h2>Metal Payment</h2>
    <hr />
    <div class="row mb-3">
        <div class="col-md-6">
            <label>Account Name</label>
            <select class="form-control">
                <option>Select Account</option>
                <option>Account 1</option>
                <option>Account 2</option>
            </select>
        </div>
        <div class="col-md-3">
            <label>Date</label>
            <input type="date" class="form-control" />
        </div>
        <div class="col-md-3">
            <label>Bill No</label>
            <input type="text" class="form-control" disabled />
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-md-6">
            <label>Narration</label>
            <input type="text" class="form-control" />
        </div>
    </div>
    <div class="form-group mt-4">
        <label>
            <input type="radio" name="PaymentType" value="Payment"> Payment
        </label>
        <label>
            <input type="radio" name="PaymentType" value="Receipt"> Receipt
        </label>
    </div>

    <!-- Receipt Design -->
    <div>
        <table class="table table-bordered mt-3">
            <thead>
                <tr>
                    <th>Item</th>
                    <th>Gr.Wt.</th>
                    <th>Tunch</th>
                    <th>Fine</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        <select class="form-control">
                            <option selected>Gold Fine</option>
                            <option>Cadbury</option>
                            <option>Dhal</option>
                        </select>
                    </td>
                    <td><input type="number" class="form-control"></td>
                    <td><input type="number" class="form-control" value="100"></td>
                    <td><input type="number" class="form-control"></td>
                </tr>
                <tr>
                    <td>
                        <select class="form-control">
                            <option>Gold Fine</option>
                            <option selected>Cadbury</option>
                            <option>Dhal</option>
                        </select>
                    </td>
                    <td><input type="number" class="form-control"></td>
                    <td><input type="number" class="form-control" value="99.50"></td>
                    <td><input type="number" class="form-control"></td>
                </tr>
                <tr>
                    <td>
                        <select class="form-control">
                            <option>Gold Fine</option>
                            <option>Cadbury</option>
                            <option selected>Dhal</option>
                        </select>
                    </td>
                    <td><input type="number" class="form-control"></td>
                    <td><input type="number" class="form-control" value="80"></td>
                    <td><input type="number" class="form-control"></td>
                </tr>
            </tbody>
        </table>
    </div>
    <button class="btn btn-primary mb-3" onclick="addNewRow()">Add New Row</button>

    <h3 class="mt-3">Balance Details</h3>
    <hr />
    <div class="row mt-3">
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead class="bg-light">
                    <tr>
                        <th></th>
                        <th>Fine</th>
                    </tr>
                </thead>
                <tbody>
                    <tr class="col">
                        <td>Total Previous Balance</td>
                        <td><input type="text" class="form-control" readonly disabled /></td>
                    </tr>
                    <tr class="col">
                        <td>Total New Balance</td>
                        <td><input type="text" class="form-control" readonly disabled /></td>
                    </tr>
                    <tr class="col">
                        <td>Total Balance</td>
                        <td><input type="text" class="form-control" readonly disabled /></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <button class="btn btn-primary">Save</button>
    <button class="btn btn-secondary">Cancel</button>
</div>

<script>
    function addNewRow() {
        let table = document.querySelector(".table tbody");
        let newRow = table.rows[0].cloneNode(true);
        table.appendChild(newRow);
    }
</script>

