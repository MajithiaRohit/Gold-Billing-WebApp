
<div class="container py-5">
    <!-- Page Title -->
    <div class="pagetitle mb-5 text-center position-relative overflow-hidden">
        <h1 class="fw-bold display-5" style="color: #1e272e; letter-spacing: 2px; text-transform: uppercase; position: relative; z-index: 1;">
            Dashboard
        </h1>
        <nav>
            <ol class="breadcrumb justify-content-center mt-3" style="background: none;">
                <li class="breadcrumb-item"><a href="index.html" class="text-decoration-none" style="color: #6c5ce7;">Home</a></li>
                <li class="breadcrumb-item active" style="color: #fff; font-weight: 500;">Dashboard</li>
            </ol>
        </nav>
        <div class="bg-effect" style="position: absolute; top: -50%; left: -50%; width: 200%; height: 200%; background: radial-gradient(circle, rgba(108, 92, 231, 0.2), transparent); z-index: 0; animation: pulse 6s infinite;"></div>
    </div>

    <!-- Dashboard Cards -->
    <section class="section dashboard">
        <div class="row g-4">
            <!-- Total Sales Gross Weight Card -->
            <div class="col-xxl-4 col-md-6">
                <div class="card info-card sales-card shadow-lg border-0 rounded-4 animate-card overflow-hidden">
                    <div class="card-body p-4 position-relative">
                        <h5 class="card-title fw-semibold text-muted mb-3">Gross Weight (Sales) <span class="text-white opacity-75">| All Time</span></h5>
                        <div class="d-flex align-items-center">
                            <div class="card-icon rounded-circle d-flex align-items-center justify-content-center me-3" style="background: linear-gradient(135deg, #6c5ce7, #a29bfe);">
                                <i class="bi bi-cart fs-2 text-white"></i>
                            </div>
                            <div>
                                <h6 class="fw-bold mb-1" style="color: #fff; font-size: 1.5rem;">@Model.TotalSales.ToString("N2") g</h6>
                                <span class="text-success fw-bold" style="font-size: 0.9rem;">12%</span>
                                <span class="text-white opacity-75 small ps-1">increase</span>
                            </div>
                        </div>
                        <div class="bg-overlay" style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; background: linear-gradient(135deg, rgba(108, 92, 231, 0.9), rgba(162, 155, 254, 0.7)); z-index: -1;"></div>
                    </div>
                </div>
            </div>

            <!-- Total Purchase Gross Weight Card -->
            <div class="col-xxl-4 col-md-6">
                <div class="card info-card revenue-card shadow-lg border-0 rounded-4 animate-card overflow-hidden">
                    <div class="card-body p-4 position-relative">
                        <h5 class="card-title fw-semibold text-muted mb-3">Gross Weight (Purchases) <span class="text-white opacity-75">| All Time</span></h5>
                        <div class="d-flex align-items-center">
                            <div class="card-icon rounded-circle d-flex align-items-center justify-content-center me-3" style="background: linear-gradient(135deg, #00b894, #55efc4);">
                                <i class="bi bi-currency-rupee fs-2 text-white"></i>
                            </div>
                            <div>
                                <h6 class="fw-bold mb-1" style="color: #fff; font-size: 1.5rem;">@Model.TotalPurchase.ToString("N2") g</h6>
                            </div>
                        </div>
                        <div class="bg-overlay" style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; background: linear-gradient(135deg, rgba(0, 184, 148, 0.9), rgba(85, 239, 196, 0.7)); z-index: -1;"></div>
                    </div>
                </div>
            </div>

            <!-- Gross Weight Stock Card -->
            <div class="col-xxl-4 col-md-6">
                <div class="card info-card stock-card shadow-lg border-0 rounded-4 animate-card overflow-hidden">
                    <div class="card-body p-4 position-relative">
                        <h5 class="card-title fw-semibold text-muted mb-3">Gross Weight (Stock) <span class="text-white opacity-75">| Current</span></h5>
                        <div class="d-flex align-items-center">
                            <div class="card-icon rounded-circle d-flex align-items-center justify-content-center me-3" style="background: linear-gradient(135deg, #e84393, #ff7675);">
                                <i class="bi bi-box fs-2 text-white"></i>
                            </div>
                            <div>
                                <h6 class="fw-bold mb-1" style="color: #fff; font-size: 1.5rem;">@Model.GrossWeight.ToString("N2") g</h6>
                            </div>
                        </div>
                        <div class="bg-overlay" style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; background: linear-gradient(135deg, rgba(232, 67, 147, 0.9), rgba(255, 118, 117, 0.7)); z-index: -1;"></div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

<style>
    body {
        min-height: 100vh;
        overflow-x: hidden;
    }

    .pagetitle {
        background: transparent;
        padding: 30px;
        border-radius: 20px;
        position: relative;
    }

    .breadcrumb-item a:hover {
        color: #a29bfe;
        text-decoration: underline;
    }

    .info-card {
        background: #fff;
        transition: all 0.4s ease;
        position: relative;
    }

        .info-card:hover {
            transform: translateY(-10px) scale(1.02);
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.15);
        }

    .card-icon {
        width: 60px;
        height: 60px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
        transition: transform 0.3s ease;
    }

    .info-card:hover .card-icon {
        transform: rotate(360deg);
    }

    .card-body {
        border-radius: 15px;
        z-index: 1;
    }

    .animate-card {
        animation: slideUp 0.6s ease-out forwards;
    }

    @@keyframes slideUp {
        from

    {
        opacity: 0;
        transform: translateY(30px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    @@keyframes pulse {
        0%

    {
        transform: scale(1);
    }

    50% {
        transform: scale(1.1);
    }

    100% {
        transform: scale(1);
    }

    }

    .bg-overlay {
        border-radius: 15px;
        transition: opacity 0.3s ease;
    }

    .info-card:hover .bg-overlay {
        opacity: 0.95;
    }
</style>
