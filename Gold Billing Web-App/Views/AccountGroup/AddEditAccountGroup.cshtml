@model Gold_Billing_Web_App.Models.AccountGroupModel
<div class="container mt-4">
    <h2>Add/Edit Account Group</h2>
    <div class="card">
        <div class="card-body">
            <form asp-action="saveAddEditAccountGroup" asp-controller="AccountGroup" method="post" class="row g-3">
                @Html.HiddenFor(m => m.Id)
                <div class="row">
                    <!-- Address Section -->
                    <h5 class="mt-3">Account Group Detail</h5>
                    <hr>
                    <!-- Account Name & Group -->
                    <div class="col-md-6">
                        <label class="form-label">Account Group Name</label>
                        <input type="text" class="form-control" asp-for="GroupName" />
                    </div>
                </div>
                <!-- Submit Button -->
                <div class="d-flex justify-content-start mt-5">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <a class="btn btn-secondary mx-2" asp-action="AccountGroupList">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>