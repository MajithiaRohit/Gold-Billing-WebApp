@using System.Data
@model DataTable
@{
    ViewData["Title"] = "Item List";
}

<!-- Add SweetAlert2 CDN -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<h2>Item List</h2>
<a class="btn btn-primary" asp-action="AddEditItem">Add New Item</a>
<table class="table table-bordered mt-3">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Group Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (DataRow row in Model.Rows)
        {
            <tr>
                <td>@row["Id"]</td>
                <td>@row["Name"]</td>
                <td>@row["GroupName"]</td>
                <td>
                    <a class="btn btn-warning" asp-action="AddEditItem" asp-route-Id="@row["Id"]">Edit</a>
                    <button class="btn btn-danger delete-btn" data-id="@row["Id"]">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        // Check for success/error messages from TempData
        @if (TempData["SuccessMessage"] != null)
        {
            @Html.Raw($"Swal.fire({{icon: 'success', title: 'Success', text: '{TempData["SuccessMessage"]}'}})")
        }
        @if (TempData["ErrorMessage"] != null)
        {
            @Html.Raw($"Swal.fire({{icon: 'error', title: 'Error', text: '{TempData["ErrorMessage"]}'}})")
        }

        // Handle delete button click
        document.querySelectorAll('.delete-btn').forEach(button => {
            button.addEventListener('click', function() {
                const itemId = this.getAttribute('data-id');

                Swal.fire({
                    title: 'Are you sure?',
                    text: "You won't be able to revert this!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Yes, delete it!'
                }).then((result) => {
                    if (result.isConfirmed) {
                        fetch('/Item/DeleteItem/' + itemId, {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json',
                            }
                        })
                        .then(response => response.json())
                        .then(data => {
                            if (data.success) {
                                Swal.fire({
                                    icon: 'success',
                                    title: 'Deleted!',
                                    text: data.message,
                                    showConfirmButton: false,
                                    timer: 1500
                                }).then(() => {
                                    location.reload(); // Refresh the page
                                });
                            } else {
                                Swal.fire({
                                    icon: 'error',
                                    title: 'Error',
                                    text: data.message
                                });
                            }
                        })
                        .catch(error => {
                            Swal.fire({
                                icon: 'error',
                                title: 'Error',
                                text: 'An unexpected error occurred'
                            });
                        });
                    }
                });
            });
        });
    </script>
}