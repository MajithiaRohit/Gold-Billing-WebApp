@model Gold_Billing_Web_App.Models.ItemModel
@{
    ViewData["Title"] = Model.Id == null ? "Add Item" : "Edit Item";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="SaveItem" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Name" class="form-label">Item Name</label>
        <input asp-for="Name" class="form-control" required />
    </div>

    <div class="mb-3">
        <label asp-for="ItemGroupId" class="form-label">Item Group</label>
        <select asp-for="ItemGroupId" class="form-control">
            <option value="">Select Account Group</option>
            @foreach (var group in ViewBag.ItemGroupList)
            {
                <option value="@group.Id">@group.GroupName</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="ItemList" class="btn btn-secondary">Cancel</a>
</form>
