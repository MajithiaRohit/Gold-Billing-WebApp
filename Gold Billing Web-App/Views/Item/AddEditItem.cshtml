<div class="container mt-4">
    <h2>Items Master</h2>
    <div class="card">
        <div class="card-body">
    <form action="/ItemMaster/Create" method="post">
        <div class="mb-3">
            <label for="ItemName" class="form-label mt-3">Item Name</label>
            <input type="text" id="ItemName" name="ItemName" class="form-control" required>
        </div>

        <div class="mb-3">
            <label for="ItemGroup" class="form-label">Item Group</label>
            <select id="ItemGroup" name="ItemGroup" class="form-select">
                <option value="">-- Select --</option>
                <option value="Group1">Group 1</option>
                <option value="Group2">Group 2</option>
            </select>
        </div>
        <div class="mt-4">
            <button type="submit" class="btn btn-primary">Save</button>
            <button type="reset" class="btn btn-secondary">Cancel</button>
        </div>

    </form>
    </div>
    </div>
</div>