@model System.Data.DataTable

@{
    ViewData["Title"] = "Item Group List";
}

<h2>Item Group List</h2>
<a href="@Url.Action("AddEditItemGroup", "ItemGroup")" class="btn btn-primary">Add New Item Group</a>

<table class="table table-bordered mt-3">
    <thead>
        <tr>
            <th>Id</th>
            <th>Group Name</th>
            <th>Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (System.Data.DataRow row in Model.Rows)
        {
            <tr>
                <td>@row["Id"]</td>
                <td>@row["Name"]</td>
                <td>@Convert.ToDateTime(row["Date"]).ToString("yyyy-MM-dd")</td>
                <td>
                    <a href="@Url.Action("AddEditItemGroup", "ItemGroup", new { Id = row["Id"] })" class="btn btn-warning">Edit</a>
                    <a href="@Url.Action("DeleteItemGroup", "ItemGroup", new { Id = row["Id"] })" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
