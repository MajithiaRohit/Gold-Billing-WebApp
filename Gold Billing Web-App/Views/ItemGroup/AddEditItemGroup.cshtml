@model Gold_Billing_Web_App.Models.ItemGroupModel

<div class="container mt-4">
    <h2>@(Model.Id > 0 ? "Edit" : "Add") Item Group</h2>
    <div class="card">
        <div class="card-body">
            <form asp-action="SaveItemGroup" asp-controller="ItemGroup" method="post" class="row g-3">
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.Id)
                @Html.HiddenFor(m => m.Date) <!-- Hidden since set in controller -->
                @Html.HiddenFor(m => m.UserId) <!-- Add hidden field for UserId -->

                <div class="row">
                    <h5 class="mt-3">Item Group Details</h5>
                    <hr>
                    <div class="col-md-6">
                        <label class="form-label" asp-for="Name">Item Group Name</label>
                        <input type="text" class="form-control" asp-for="Name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-12">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                </div>

                <div class="d-flex justify-content-start mt-5">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <a class="btn btn-secondary mx-2" asp-action="ItemGroupList">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}