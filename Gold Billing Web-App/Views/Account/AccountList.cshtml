@using System.Data;

<div class="card">
    <div class="card-body">
        <h5 class="card-title text-center">Bills</h5>

        <!-- Scrollable Table Container -->
        <div class="table-responsive" style="max-height: 500px; overflow-y: auto;">
            <table class="table table-striped table-bordered">
                <thead class="table-dark text-center">
                    <tr>
                        <th scope="col" style="white-space: nowrap;">Account Id</th>
                        <th scope="col" style="white-space: nowrap;">Date</th>
                        <th scope="col" style="white-space: nowrap;">Account Name</th>
                        <th scope="col" style="white-space: nowrap;">Account Group Name</th>
                        <th scope="col" style="white-space: nowrap;">Address</th>
                        <th scope="col" style="white-space: nowrap;">City</th>
                        <th scope="col" style="white-space: nowrap;">Pincode</th>
                        <th scope="col" style="white-space: nowrap;">Mobile No</th>
                        <th scope="col" style="white-space: nowrap;">Phone No</th>
                        <th scope="col" style="white-space: nowrap;">Email</th>
                        <th scope="col" style="white-space: nowrap;">Fine</th>
                        <th scope="col" style="white-space: nowrap;">Amount</th>
                        <th scope="col" style="white-space: nowrap;" class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (DataRow a in Model.Rows)
                    {
                        <tr>
                            <td style="white-space: nowrap;">@a["AccountId"]</td>
                            <td style="white-space: nowrap;">@a["Date"]</td>
                            <td style="white-space: nowrap;">@a["AccountName"]</td>
                            <td style="white-space: nowrap;">@a["GroupName"]</td>
                            <td style="white-space: nowrap;">@a["Address"]</td>
                            <td style="white-space: nowrap;">@a["City"]</td>
                            <td style="white-space: nowrap;">@a["Pincode"]</td>
                            <td style="white-space: nowrap;">@a["MobileNo"]</td>
                            <td style="white-space: nowrap;">@a["PhoneNo"]</td>
                            <td style="white-space: nowrap;">@a["Email"]</td>
                            <td style="white-space: nowrap;">@a["Fine"]</td>
                            <td style="white-space: nowrap;">@a["Amount"]</td>
                            <td class="text-center" style="white-space: nowrap;">
                                <div class="btn-group" role="group">
                                    <form asp-action="AddEditAccount" asp-controller="Account" method="post">
                                        <input type="hidden" name="AccountId" value="@a["AccountId"]" />
                                        <button type="submit" class="btn btn-outline-primary btn-sm">Edit</button>
                                    </form>
                                    <form asp-action="DeleteAccount" asp-controller="Account" method="post">
                                        <input type="hidden" name="AccountId" value="@a["AccountId"]" />
                                        <button type="submit" class="btn btn-outline-danger btn-sm" onclick="return confirm('Are you sure you want to delete this Account?');">Delete</button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <!-- End Scrollable Table Container -->
    </div>
</div>
