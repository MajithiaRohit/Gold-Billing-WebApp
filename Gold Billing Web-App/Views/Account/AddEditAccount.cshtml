@model Gold_Billing_Web_App.Models.AccountModel

<div class="container mt-4">
    <h2>Add/Edit Account</h2>
    <div class="card">
        <div class="card-body">
            <form asp-action="saveAddEditAccount" asp-controller="Account" method="post" class="row g-3">
                @Html.HiddenFor(m => m.AccountId)
                @Html.HiddenFor(m => m.Date)
                <div class="row">
                    <h5 class="mt-3">Account Details</h5>
                    <hr>
                    <div class="col-md-6">
                        <label class="form-label">Account Name</label>
                        <input type="text" class="form-control" asp-for="AccountName" required />
                    </div>
                    <div class="col-md-6">
                        <label>Account Group</label>
                        <select asp-for="AccountGroupId" asp-items="@(new SelectList(ViewBag.groupList, "Id", "GroupName"))" class="form-control">
                            <option value="">Select Account Group</option>
                        </select>
                        <span asp-validation-for="AccountGroupId" class="text-danger"></span>

                    </div>
                </div>

                <div class="row mt-3">
                    <div class="col-md-12">
                        <label class="form-label">Address</label>
                        <textarea class="form-control" asp-for="Address"></textarea>
                    </div>
                </div>

                <h5 class="mt-4">Contact Information</h5>
                <hr>
                <div class="row">
                    <div class="col-md-6">
                        <label class="form-label">City</label>
                        <input type="text" class="form-control" asp-for="City" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Pincode</label>
                        <input type="text" class="form-control" asp-for="Pincode" />
                    </div>
                </div>

                <div class="row mt-3">
                    <div class="col-md-6">
                        <label class="form-label">Mobile No</label>
                        <input type="text" class="form-control" asp-for="MobileNo" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Phone No</label>
                        <input type="text" class="form-control" asp-for="PhoneNo" />
                    </div>
                </div>

                <div class="row mt-3">
                    <div class="col-md-6">
                        <label class="form-label">Email</label>
                        <input type="email" class="form-control" asp-for="Email" />
                    </div>
                </div>

                <h5 class="mt-4">Opening Balance</h5>
                <hr>
                <div class="row">
                    <div class="col-md-6">
                        <label class="form-label">Gold Fine</label>
                        <input type="number" class="form-control" asp-for="Fine" step="0.001" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Amount</label>
                        <input type="number" class="form-control" asp-for="Amount" step="0.01" />
                    </div>
                </div>

                <div class="d-flex justify-content-start mt-5">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <a class="btn btn-secondary mx-2" asp-action="AccountList">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
