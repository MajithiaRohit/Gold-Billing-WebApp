@model Gold_Billing_Web_App.Models.AccountModel
<div class="container mt-4">
    <h2>Create Account</h2>
    <div class="card">
        <div class="card-body">
            <div class="row">
                <!-- Address Section -->
                <h5 class="mt-3" ">Account Details</h5>
                <hr>
                <!-- Account Name & Group -->
                <div class="col-md-6">
                    <label class="form-label">Account Name</label>
                    <input type="text" class="form-control" asp-for="AccountName" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">Account Group</label>
                    <input type="text" class="form-control" asp-for="Group" />
                </div>
            </div>

            <div class="row mt-3">
                <div class="col-md-12">
                    <label class="form-label">Address</label>
                    <textarea class="form-control" asp-for="Address"></textarea>
                </div>
            </div>

            <!-- Contact Information -->
            <h5 class="mt-4">Contact Information</h5>
            <hr>
            <div class="row">
                <div class="col-md-6">
                    <label class="form-label">Phone</label>
                    <input type="text" class="form-control" asp-for="Phone" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">Mobile</label>
                    <input type="text" class="form-control" asp-for="Mobile" />
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-md-6">
                    <label class="form-label">City</label>
                    <input type="text" class="form-control" asp-for="Phone" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">Pincode</label>
                    <input type="text" class="form-control" asp-for="Mobile" />
                </div>
            </div>
            <!-- Opening Balance -->
            <h5 class="mt-4">Opening Balance</h5>
            <hr>
            <div class="row">
                <div class="col-md-6">
                    <label class="form-label">Gold Fine</label>
                    <input type="number" class="form-control" asp-for="GoldFine" step="0.001" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">Amount</label>
                    <input type="number" class="form-control" asp-for="Amount" step="0.01" />
                </div>
            </div>


            <!-- Submit Button -->
            <div class="d-flex justify-content-start mt-5">
                <button type="submit" class="btn btn-primary">Save</button>
                <button type="reset" class="btn btn-secondary mx-2">Cancel</button>
            </div>
        </div>
    </div>
</div>

                @section Scripts {
    <script>
        $(document).ready(function () {
            // You can add custom JavaScript/jQuery here if needed
        });
    </script>
                }
